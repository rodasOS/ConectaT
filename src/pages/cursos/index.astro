---
import Layout from '../../layouts/Layout.astro';
import { cursos } from '../../data/cursos.ts';
---

<Layout title='ConectaT - Cursos'>
	<div class='flex flex-wrap justify-center items-center gap-12
			max-sm:gap-2'>
		{
			cursos.map((curso) => (
				<a href={`cursos/${curso.url}`}>
					<div
						class=' max-w-[290px] pb-6 overflow-hidden flex flex-col justify-between bg-[#23425e] rounded-lg shadow-xl 
				hover:cursor-pointer hover:scale-110
				transition-all ease-out duration-300
				max-sm:max-w-[210px]'>
						<img src='INTRODUCCIÃ“N.png' alt='' class='mb-4 aspect-[500/500]' />
						<h2
							class='text-2xl font-bold text-[#f0f0f0] m-4
							max-sm:text-[16px]'>
							{curso.nombre}
						</h2>
						<p class='text-[#d9d4ff] max-sm:text-[14px] mx-4'>{curso.descripcion}</p>
					</div>
				</a>
			))
		}
	</div>
</Layout>
